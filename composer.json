{
  "name": "macpaw/behat-messenger-context",
  "type": "symfony-bundle",
  "description": "Behat Context for testing Symfony Messenger component",
  "keywords": [
    "MacPaw",
    "symfony",
    "behat",
    "BDD",
    "Context",
    "Messenger"
  ],
  "authors": [
    {
      "name": "IiiigorGG",
      "email": "roidloua@gmail.com",
      "homepage": "https://macpaw.com/",
      "role": "Software Engineer"
    },
    {
      "name": "Yozhef Hisem",
      "email": "hisemjo@gmail.com",
      "homepage": "https://macpaw.com/",
      "role": "Software Engineer"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "behat/behat": "^3.0",
    "symfony/messenger": "^6.4",
    "symfony/serializer": "^6.4",
    "symfony/dependency-injection": "^6.4",
    "symfony/http-kernel": "^6.4",
    "macpaw/similar-arrays": "^1.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^10.4",
    "slevomat/coding-standard": "^8.14",
    "squizlabs/php_codesniffer": "^3.6",
    "rector/rector": "^0.19",
    "friendsofphp/php-cs-fixer": "^3.39"
  },
  "autoload": {
    "psr-4": {
      "BehatMessengerContext\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BehatMessengerContext\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "composer validate",
      "@phpstan",
      "@phpcs",
      "@rector",
      "@phpunit"
    ],
    "fix": [
      "@phpcbf",
      "@cs-fix",
      "@rector-fix"
    ],
    "composer-validate": "composer validate",
    "phpstan": "./vendor/bin/phpstan analyse",
    "phpcbf": "vendor/bin/phpcbf",
    "phpcs": "./vendor/bin/phpcs",
    "cs": "PHP_CS_FIXER_IGNORE_ENV=true vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --diff --dry-run",
    "cs-fix": "PHP_CS_FIXER_IGNORE_ENV=true vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --diff",
    "phpunit": "./vendor/bin/phpunit --testdox",
    "rector": "vendor/bin/rector --dry-run",
    "rector-fix": "vendor/bin/rector process"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
